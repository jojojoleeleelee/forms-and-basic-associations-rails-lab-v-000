<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

   <%= f.label :artist_name %>
   <%= f.text_field :artist_name %>

   <%= f.collection_select :genre, Genre.all, :id, :name %>
   <%= f.text_field :content %>

   <%= f.text_field :song_notes, list: "categories_autocomplete" %>
    <datalist id="categories_autocomplete">
      <% Song.all.each do |song| %>
        <option value="<%= song.notes_content %>">
      <% end %>
    </datalist>
    <textarea name="song[content]"></textarea>


  <%= f.submit %>
<% end %>
